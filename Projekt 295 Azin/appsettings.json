{
  "Logging": {
    "LogLevel": {
      "Default": "Information", // Standard-Loglevel für die meisten Log-Nachrichten
      "Microsoft": "Warning", // Loglevel für Nachrichten aus dem Microsoft-Namespace
      "Microsoft.Hosting.Lifetime": "Information" // Loglevel für Lebenszyklus-Ereignisse der Hosting-Umgebung
    },
    "Console": {
      "IncludeScopes": true // Ob die Protokollbereiche in der Konsolenausgabe enthalten sein sollen
    },
    "Debug": {
      "LogLevel": {
        "Default": "Information" // Standard-Loglevel für die Debug-Ausgabe
      }
    },
    "File": {
      "Path": "Logs/myapp.log", // Pfad zur Protokolldatei
      "Append": true, // Ob an die Datei angehängt werden soll, statt sie zu überschreiben
      "FileSizeLimitBytes": 10485760, // Maximale Dateigröße der Protokolldatei in Bytes
      "RollingInterval": "Day", // Die Rollungsintervalle der Protokolldatei
      "RetainedFileCountLimit": 7 // Anzahl der beizubehaltenden Protokolldateien
    }
  },
  "AllowedHosts": "*", // Definiert, welche Hosts Zugriff auf die Anwendung haben. "*" erlaubt alle Hosts.
  "ConnectionStrings": {
    "BackendSkiService": "Server=azin22;Database=BackendSkiService;Trusted_Connection=True;" // Verbindungszeichenfolge für die Datenbank
  }
}
